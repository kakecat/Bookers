<html>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Boddy</th>
    <th><!--nothing--></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>







<!--ここから投稿フォーム-->

<h1>NEW BOOK</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
</html>